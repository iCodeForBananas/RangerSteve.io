{
    "manifest_version": 2,
    "name": "Ranger Steve: Online Player Counter",
    "description": "Shows the number of people playing Ranger Steve. https://rangersteve.io",
    "version": "1.1",
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    "permissions": [
        "tabs",
        "https://rangersteve.io/*"
    ]
}
